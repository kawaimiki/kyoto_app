<p id="notice"><%= notice %></p>

<br>

<%= link_to 'New Spot', new_spot_path %>


<h2>カテゴリー検索</h2>
<%= search_form_for @q, url: search_spots_path do |f| %>
  <%= f.label :category_cont, 'カテゴリー' %>
  <%= f.search_field :category_cont %>
  <br>
  <%= f.submit '検索' %>
<% end %>

<h1></h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>コメント</th>
      <th>住所</th>
      <th>TEL</th>
      <th>料金</th>
      <th>駐車場</th>
      <th>アクセス</th>
      <th>ホームページ</th>
      <th>カテゴリー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spots.each do |spot| %>
      <tr>
        <td><%= spot.name %></td>
        <td><%= spot.comment %></td>
        <td><%= spot.address %></td>
        <td><%= spot.tel %></td>
        <td><%= spot.price %></td>
        <td><%= spot.parking %></td>
        <td><%= link_to 'Google マップ', spot.access %></td>
        <td><%= link_to 'ホームページ', spot.url %></td>
        <td><%= spot.category %></td>
        <td><%= link_to '詳細', spot %></td>
        <td><%= link_to '編集', edit_spot_path(spot) %></td>
        <td><%= link_to '削除', spot, method: :delete, data: { confirm: '本当によろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



